<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Page.SingUpPage"
	Padding="10,20,10,10">
	<StackLayout
		VerticalOptions="Center">
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="*" />
				<RowDefinition
					Height="*" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition
					Width="*" />
				<ColumnDefinition
					Width="*" />
			</Grid.ColumnDefinitions>
		</Grid>
		<Image
			Source="ic_person.png"
			Grid.Column="0"
			Grid.Row="0" />
		<Entry
			Placeholder="Username"
			Grid.Column="1"
			Grid.Row="0" />
		<Entry
			Placeholder="Email"
			Grid.Column="1"
			Grid.Row="1" />
		<Entry
			Placeholder="Password"
			Grid.Column="1"
			Grid.Row="2" />
		<!--<Image
			Source="ic_person.png"
			Grid.Column="0"
			Grid.Row="1" />
		<Image
			Source="ic_person.png"
			Grid.Column="0"
			Grid.Row="2" />-->
		<Button
			x:Name="SignUp"
			Image="ic_insert.png"
			BackgroundColor="Silver"
			Grid.Column="1"
			Grid.Row="3" />
	</StackLayout>
</ContentPage>